<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style Selector="Panel.BodyContainer">
		<Setter Property="Margin" Value="20"/>
	</Style>
	<Style Selector="StackPanel.FunctionalPanel">
		<Setter Property="Margin" Value="0 0 10 0"/>
	</Style>
	<Style Selector="TextBox.EquationInput">
		<Setter Property="Margin" Value="0 5"/>
		<Setter Property="Height" Value="50"/>
		<Setter Property="FontSize" Value="30"/>
	</Style>
	
	<Style Selector="WrapPanel.VariablesPanel > Button">
		<Setter Property="Width" Value="50"/>
		<Setter Property="Height" Value="50"/>
		
	</Style>
	<Style Selector="WrapPanel.VariablesPanel > Button > TextBlock">
		<Setter Property="Width" Value="50"/>
		<Setter Property="Height" Value="50"/>
		<Setter Property="FontSize" Value="20"/>
		
	</Style>
</Styles>
